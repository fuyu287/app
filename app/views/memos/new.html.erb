
<h3>記録</h3>
<%= form_for @memo do |f| %>

  <div class="field">
    <%= f.label :タイトル %>
    <%= f.text_field :memo_name, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :メモ %>
    <%= f.text_field :memo_body, :size => 10 %>
  </div>

<div class="field">
  <%= f.label :画像 %>
  <%= f.file_field :image %>
</div>

  <%= f.submit "メモを投稿する" %>
<% end %>
<p><%= link_to "マイページに戻る", user_path(current_user.id) %></p>
